generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id            Int     @id @default(autoincrement())
    nomeCompleto  String
    nascimento    String
    cpf           String  @unique
    genero        String
    endereco      String
    email         String  @unique
    celular       String  @unique
    formacao      String
    experiencia   String
    habilidades   String
    areaInteresse String
    senha         String
    foto          String?
    match         Match[]
}

model Company {
    id           Int     @id @default(autoincrement())
    razaoSocial  String
    nomeFantasia String
    cnpj         String  @unique
    email        String  @unique
    setor        String
    localizacao  String
    descricao    String  @db.Text
    porte        String
    senha        String
    foto         String?
    match        Match[]
}

model Match {
    id        Int     @id @default(autoincrement())
    userId    Int
    companyId Int
    user      User    @relation(fields: [userId], references: [id])
    company   Company @relation(fields: [companyId], references: [id])
}
